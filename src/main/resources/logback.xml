<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">
	<include resource="org/springframework/boot/logging/logback/defaults.xml"/>
	<include resource="org/springframework/boot/logging/logback/console-appender.xml" />
	<root level="INFO">
		<appender-ref ref="CONSOLE" />
	</root>
	
	<!-- Application loggers -->
	<logger name="org.opencds.cqf.cql.engine.debug" level="DEBUG"/>
	
	<!-- Suppress Hibernate's early connection pool logging (shows "undefined/unknown") -->
	<!-- This is cosmetic - HikariCP metadata isn't available during Hibernate init -->
	<logger name="org.hibernate.orm.connections.pooling" level="WARN"/>
	
	<!-- Show HikariCP initialization (shows actual pool config) -->
	<logger name="com.zaxxer.hikari" level="INFO"/>
	<logger name="com.zaxxer.hikari.HikariConfig" level="DEBUG"/>
</configuration>
